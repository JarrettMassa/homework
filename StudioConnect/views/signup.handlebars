<div class="login-container">

    <header class="login-header">

        <img src="/assets/img/icon-white.png">
        <h1>Studio<strong>Connect</strong></h1>

    </header>
    
    <main class="login-main">
        <form role="sign-up">

            <div class="studio-check">
                <p id="user-check">I own a studio.</p>
                <div class="toggle">
                    <label class="switch">
                        <input type="checkbox" id="check" value="studio" checked>
                        <span class="slider"></span>
                    </label>
                </div>
            </div>

            <input type="email" class="signup" id="email" placeholder="Enter Email" required>
            <input type="password" class="signup" id="password" placeholder="Enter Password" required>
            <input type="password" class="signup" id="password-conf" placeholder="Confirm Password" required>
            <button type="submit" class="submit">Sign Up</button>


        </form>

    </main>

</div>

<script src="/signup.js"></script>
